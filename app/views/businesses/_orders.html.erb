<div class='remove-and-insert'>
<table style="width: 100%">
<thead class="thead-inverse">
	<tr>
		<th>Order Id</th>
		<th>Client</th>
		<th>Status Laundry</th>
		<th>Status Payment</th>
		<th>Total $</th>
	</tr>
	  <% i=0 %>
	<% @orders.each do |order| %>
	<tr class="row<%= i%>">
		<% if i == 0 %>
    	<% i = 1 %>
  	<% else %>
    	<% i = 0 %>
  	<% end %>
		<td><%= order.id %></td>
		<td><%= order.client.name %></td>
		<td>
		<%= form_for :order, url: order_path(order.id), :method => :put, html:{:class => "form-inline delivery-update"} do |f| %>
		<span class="delivery-option"><%= f.select :order_status,
				options_for_select([[order.status],['In Box'],
				['Incoming'],['Processing'],
				['Shipping']], params[:order_status])%></span>
			<% if order.status == "Processing" || order.status == "Shipping" || order.status == "Delivered" %>
			<span class="delivery-option shipper"><%= f.select :assign_shipper_to_order,
					options_for_select(shipper_array(current_admin.business.shippers), selected: selected_shipper(order))%>
			</span>
			<% end %>
			<span><%= f.submit "update" , class: "btn btn-info update-btn-form"%></span>
			<% end %>

			</td>
			<td><%= order.paid %></td>
			<td><%= order.total %></td>
		</tr>
	<% end %>
   </thead>
</table>
</div>

