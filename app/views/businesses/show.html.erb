<h1>All Clients</h1>
<table class="table">
<thead class="thead-inverse">
  <tr>
    <th></th>
    <th>Bag Id</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Order count</th>
    <th>Total $</th>
  </tr>
  <% current_admin.business.clients.each do |client| %>
  <tr>
     <% if client.bag_id %>
     <td><%= link_to "edit", edit_bag_path(client) %></td>
    <td><%= client.bag_id %></td>
    <% else %>
    <td><%= form_tag(add_bag_path(client), method: "post") do %>
      <%= text_field_tag(:bag_id) %> <%= submit_tag("set")%>
      <% end %>
    </td>
    <td><%= client.bag_id %></td>
    <% end %>
    <td><%= client.name %></td>
    <td><%= client.email %></td>
    <td><%= client.phone %></td>
    <td><%= client.orders.count %></td>
    <td><%= client.orders.sum(:total) %></td>

  </tr>
  <% end %>
  </thead>
</table>
<br>
<div class="row">
<div class="col">
<h1>All Admins</h1>
<table style="width:30%">
  <tr>
    <th>Admin</th>
    <th>Email</th>
  </tr>
  <% current_admin.business.admins.each do |admin| %>
  <tr>
    <td><%= admin.name %></td>
    <td><%= admin.email %></td>

  </tr>
  <% end %>
</table>
</div>

<div class="col">
<h1>All Shippers</h1>
<table style="width:50%">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>

  </tr>
  <% current_admin.business.shippers.each do |shipper| %>
  <tr>
    <td><%= shipper.name %></td>
    <td><%= shipper.email %></td>
    <td><%= shipper.phone %></td>
  </tr>
  <% end %>
</table>
<br>
<br>
</div>
</div>

<div class="col">
   <%= render partial: "boxes/index"%>
</div>
