<h5 id="order_id" data-order-id="<%= order.id %>"  > Status for order number <%= order.id %></h5>
<div class="row">
  <div class="col">
    Order started on: <%= order.created_at.strftime("%B %d, %Y") %>
  </div>
</div>
<div class="row">
  <div class="col">
    Paid: <%= order.paid %>
    </div>
  <% if order.paid == false %>
  <%= form_tag(new_charge_path, :method=>'get', class:"pay-now") do %>
  <%= hidden_field_tag "order_id", "#{order.id}"%>
  <%= submit_tag "pay now", class: "btn-link" %>
  <% end %>
  <% end %>
</div>
<div class="row">
  <div class="col">
    Payment: <%= order.total %>
  </div>
</div>

<div class="row">
  <div class="col">In box</div>
  <div class="col">Incoming</div>
  <div class="col">Processing</div>
  <div class="col"></div>
  <div class="col">Shipping</div>
  <div class="col">Delivered</div>
</div>
<div class="row">
	<div class="col">
		<div class="progress">
	  <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= status_bar(order) %>%"></div>
	</div>
</div>
</div>

